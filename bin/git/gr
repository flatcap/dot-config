#!/bin/bash

set -o errexit	# set -e
set -o nounset	# set -u

renice --priority 19 --pid $$ > /dev/null
ionice --class 3     --pid $$ > /dev/null

DIRS=""
DATA_FILE="git.txt"

function log()
{
	echo -e "\e[32m$1\e[0m"
}

function usage()
{
	echo "Usage:"
	echo "    ${0##*/} [pull|push|{fetch|f}|{status|st|s}|clean|{tidy|t}|clone|wipe|redate]"
	exit 1
}

function get_dirs()
{
	local i
	local dir_list="$(find . -type d -name .git | sort | cut -b3-)"
	for i in $dir_list; do
		[ "$i" = ".git" ] && i=.
		DIRS="$DIRS ${i%/*}"
	done
	DIRS="$DIRS $(find . -type d -name "?*.git" | sort | cut -b3-)"
}

function git_fetch()
{
	local i
	for i in $DIRS; do
		title git fetch $i
		log $i
		pushd $i > /dev/null
		[ -n "$(git remote)" ] && git fetch origin master:master
		popd > /dev/null
	done
}

function git_push()
{
	local i
	for i in $DIRS; do
		title git push $i
		log $i
		pushd $i > /dev/null
		[ -n "$(git remote)" ] && git push
		popd > /dev/null
	done
}

function git_pull()
{
	local i
	for i in $DIRS; do
		title git pull $i $@
		log $i
		pushd $i > /dev/null
		if [ -n "$(git remote)" ]; then
			BARE="$(git config --get core.bare)"
			if [ "$BARE" = "true" ]; then
				git fetch origin master:master
			else
				git fetch --quiet
				MASTER=$(git rev-parse HEAD)
				FETCH=$(git rev-parse FETCH_HEAD)
				if [ $MASTER != $FETCH ]; then
					BRANCH=$(git branch | sed -n '/*/{s/^\* //;p}')
					git --no-pager ll $BRANCH^1..FETCH_HEAD
					echo
					git merge --ff --quiet FETCH_HEAD
				fi
			fi
		fi
		popd > /dev/null
	done
}

function git_status()
{
	local i
	for i in $DIRS; do
		title git status $i
		log $i
		pushd $i > /dev/null
		BARE="$(git config --get core.bare)"
		if [ "$BARE" = "false" ]; then
			git stash list
			git status -s
		fi
		popd > /dev/null
	done
}

function git_clean()
{
	local i
	local SURE
	read -p "Are you sure [y/N]?" -t 3 -n 1 SURE
	echo
	[ "$SURE" != "y" ] && return
	for i in $DIRS; do
		title git clean $i
		log $i
		pushd $i > /dev/null
		git clean -dxf
		popd > /dev/null
	done
}

function git_tidy()
{
	local i
	for i in $DIRS; do
		title git tidy $i
		log $i
		pushd $i > /dev/null
		git prune
		git gc #--aggressive
		git fsck --full --strict
		if [ -d .git ]; then
			rm -f .git/hooks/*.sample .git/GIT_COLA_MSG .git/gitk.cache .git/COMMIT_EDITMSG .git/qgit_cache.dat
		else
			rm -f hooks/*.sample GIT_COLA_MSG gitk.cache COMMIT_EDITMSG qgit_cache.dat
		fi
		popd > /dev/null
	done
}

function git_clone()
{
	cat "$DATA_FILE" | while read DIR GIT; do
		if [ -d $DIR ]; then
			echo $DIR already exists
		else
			title git clone $DIR
			log $DIR
			git clone $GIT $DIR
		fi
	done
}

function git_wipe()
{
	local i
	local SURE
	read -p "Are you sure [y/N]?" -t 3 -n 1 SURE
	echo
	[ "$SURE" != "y" ] && return
	for i in $DIRS; do
		title git wipe $i
		log $i
		rm -fr $i
	done
}

function git_redate()
{
	local i
	for i in $DIRS; do
		title git redate $i
		log $i
		pushd $i > /dev/null
		find . -name .git -prune -o \( ! -type l -print \) | while IFS="" read i; do touch -d "$(git log --format="%cd" -n1 --date=iso $i)" $i; done
		popd > /dev/null
	done
}


get_dirs

ARG="${1:-}"

case $ARG in
	push)
		git_push ;;
	pull)
		shift
		git_pull $@ ;;
	fetch|f)
		git_fetch ;;
	status|st|s)
		git_status ;;
	clean)
		git_clean ;;
	tidy|t)
		git_tidy ;;
	clone)
		git_clone ;;
	wipe)
		git_wipe ;;
	redate)
		git_redate ;;
	*)
		usage ;;
esac

title

