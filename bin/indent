#!/bin/bash

function usage()
{
	echo indent [-h] [ -i NUM ] [ -r REGEX ] [ FILE... ]
}


FILES=()
INDENT=8
REGEX=

while [ $# -gt 0 ]; do
	case "$1" in
		-i)
			if [ $# -lt 2 ]; then
				echo "INDENT needs an argument"
				usage
				exit 1
			fi

			if [[ ! "$2" =~ ^[0-9]+$ ]]; then
				echo "INDENT '$2' must be an integer"
				usage
				exit 1
			fi

			INDENT="$2"
			shift 2
			;;
		-r)
			if [ $# -lt 2 ]; then
				echo "REGEX needs an argument"
				usage
				exit 1
			fi

			REGEX="$2"
			shift 2
			;;
		-h)
			usage
			exit 1
			;;
		-*)
			echo "Unknown option: '$1'"
			usage
			exit 1
			;;
		*)
			FILES+=("$1")
			shift
			;;
	esac
done

STR=$(printf "%*s" $INDENT)
if [ -n "$REGEX" ]; then
	SED="/$REGEX/s/^/$STR/"
else
	SED="s/^/$STR/"
fi

if [ -n "$FILES" ]; then
	cat "${FILES[@]}" | sed "$SED"
else
	exec sed "$SED"
fi

