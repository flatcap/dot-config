#!/bin/bash

[ -z "$1" ] && exit 1

exec 2> /dev/null	# Turn off stderr

for i in "$@"; do
	[ -d "$i" ] && continue

	if [ ! -f "$i" ]; then
		echo "file not found: $i"
		continue
	fi

	case "$i" in
		*.doc|*.odt|*.rtf|*.ott)
			(oowriter "$i" &) &> /dev/null
			;;
		*.xls|*.ods|*.csv)
			(oocalc "$i" &) &> /dev/null
			;;
		*.txt)
			(gedit "$i" &) &> /dev/null
			;;
		*.pdf)
			(evince "$i" &) &> /dev/null
			;;
		*.svg)
			(inkscape "$i" &) &> /dev/null
			;;
		*.avi|*.mpg|*.wmv|*.mp4|*.mkv|*.ogg|*.mov|*.mp3|*.flv)
			#(totem --fullscreen --enqueue "$i" &) &> /dev/null
			(totem --enqueue "$i" &) &> /dev/null
			#(totem --no-existing-session "$i" &) &> /dev/null
			#(xine --no-splash --auto-play=fq "$i" &) &> /dev/null
			#gmplayer "$i"
			;;
		*.dot|*.gv)
			#(dotty "$i" &) &> /dev/null
			#xdotool search --name ${i%.*} windowkill
			(dot -Tpng $i | display -title ${i%.*} - &) >& /dev/null
			;;
		*.htm|*.html)
			(firefox "$i" &) &> /dev/null
			;;
		*.jpg|*.jpeg|*.png|*.gif)
			(gthumb -n "$i" &) &> /dev/null
			;;
		*.mobi|*.epub|*.prc)
			(FBReader "$i" &) &> /dev/null
			;;
		*.rm)
			(realplay -f "$i" &) &> /dev/null
			;;
		*.torrent)
			(deluge "$i" &) &> /dev/null
			;;
		*.xcf)
			(gimp "$i" &) &> /dev/null
			;;
		*.glade)
			(glade-2 "$i" &) &> /dev/null
			;;
		*.mobi|*.epub)
			(FBReader "$i" &) &> /dev/null
			;;
		*.dia)
			(dia "$i" &) &> /dev/null
			;;
		*)
			echo "Unknown: $i"
			;;
	esac
done

