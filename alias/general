# alias !="history2"
alias ..="cd .."
alias bzip2="_compress /usr/bin/bzip2"
alias colordiff="colordiff --exclude CVS --exclude .svn --exclude tags --exclude .git"
alias ct="column -t -o ' '"
alias date2='date "+%n  %R  %A %-d %B %Y%n"'
alias db="mysql --silent --sigint-ignore --table"
alias dbs="mysql --silent --skip-column-names"
alias df="df --print-type --exclude-type rootfs --exclude-type devtmpfs --exclude-type tmpfs"
alias diff="diff --exclude CVS --exclude .svn --exclude tags --exclude .git"
alias easytag="_wrapdot /usr/bin/easytag"
alias file="file -sL"
alias grep="grep --colour=auto --directories=skip --binary-files=without-match --exclude=tags --exclude=*~"
alias gthumb="_wrapdot /usr/bin/gthumb"
alias h="history2"
alias jobs="jobs -l"
alias keep="IGNOREEOF=999"
alias killall="killall --ignore-case"
alias man="_wrapsimple /usr/bin/man"
alias mkdir="mkdir --parents"
alias nautilus="_wrapdot /usr/bin/nautilus"
alias od="LANG=C hexdump -f ~/.format"
alias odw="LANG=C hexdump -f ~/.format2"
alias rar="unrar"
alias rmdir="rmdir --ignore-fail-on-non-empty --parents"
alias root="ssh root"
alias tar="_wrapsimple /bin/tar"
alias tree="tree -CN"
alias vi="vim -X"
alias vm='virt-manager'
alias vo="vi -O"
alias vs='virsh'
alias xz="_compress /usr/bin/xz"
alias ~="cd $HOME; clear; ls"

if [ -n "$DISPLAY" ]; then
	alias vi="gvim -v"
	alias vim="gvim -v"
else
	alias vi="vim -X"
	alias vim="vim -X"
fi

