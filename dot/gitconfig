[push]
	default = matching

[alias]
	l    = log --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset' --abbrev-commit --date=relative
	ls   = log --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset' --abbrev-commit --date=relative --stat
	s    = !git stash list && git status -s
	st   = status
	sl   = !git status && echo && git l -n 4
	d    = diff
	ds   = diff --stat
	b    = branch --verbose
	tidy = !git prune && git gc --aggressive && git fsck --full --strict

[color]
	branch = auto
	diff   = auto
	status = auto

[color "branch"]
	current = green
	local   = white
	remote  = cyan

[color "diff"]
	meta       = green
	frag       = cyan
	old        = red
	new        = yellow
	whitespace = red reverse

[color "status"]
	added     = yellow
	changed   = green
	untracked = cyan

[core]
	whitespace   = trailing-space,space-before-tab,indent-with-non-tab,tabwidth=8
	pager        = "less -eFfiqrX"
	excludesfile = /home/flatcap/.gitignore

[diff]
	mnemonicprefix = true
	tool           = meld
	guitool        = meld

[difftool]
	prompt = no

[giggle]
	main-window-maximized = true
	main-window-geometry = 451x253+244+479
