[push]
	default = matching

[alias]
	l    = log --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset' --abbrev-commit --date=relative
	ls   = log --branches --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset' --abbrev-commit --date=relative --stat
	s    = !git stash list --date=local && git status --short
	st   = status
	sl   = !git status && echo && git log -n 4
	d    = diff
	ds   = diff --stat
	b    = branch --verbose
	tidy = !git prune && git gc --aggressive && git fsck --full --strict
	lca  = !git merge-base master $(git rev-parse --abbrev-ref HEAD) | cut -b-7

[color]
	branch = auto
	diff   = auto
	status = auto

[color "branch"]
	current = green
	local   = white
	remote  = cyan

[color "diff"]
	meta       = green
	frag       = cyan
	old        = red
	new        = yellow
	whitespace = red reverse

[color "status"]
	added     = yellow
	changed   = green
	untracked = cyan

[core]
	whitespace   = trailing-space,space-before-tab,indent-with-non-tab,tabwidth=8
	pager        = "less -eFfiqrX"
	excludesfile = /home/flatcap/.gitignore

[diff]
	mnemonicprefix = true
	tool           = vimdiff
	guitool        = vimdiff

[difftool]
	prompt = no

[merge]
	tool    = vimdiff
	guitool = vimdiff
	ff      = false

[giggle]
