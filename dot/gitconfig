	current  = 47
	local    = white
	remote   = 123
	upstream = 214
	plain    = white
	ui       = always

[color "diff"]
	meta       = 47
	frag       = 123
	old        = 204
	new        = 228
	whitespace = 204 reverse

[color "status"]
	header    = white
	added     = 228
	changed   = 47
	untracked = 123
	branch    = 47
	nobranch  = 204 reverse
	unmerged  = 204

