[github]
	user  = flatcap
	token = 87f49c3aebb08f1add7b59c1e3f57cd0

[push]
	default = matching

[alias]
	b    = branch --verbose --verbose
	d    = diff
	ds   = diff --stat
	l    = log --branches --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cd)%Creset%C(yellow)%d%Creset' --abbrev-commit --date=relative -n 30
	lca  = !git merge-base master $(git rev-parse --abbrev-ref HEAD) | cut -b-7
	ll   = log --branches --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cd)%Creset%C(yellow)%d%Creset' --abbrev-commit --date=relative
	ls   = log --branches --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cd)%Creset%C(yellow)%d%Creset' --abbrev-commit --date=relative --stat
	s    = !git stash list && git status --short
	sb   = !git branch --verbose --verbose & git stash list && git status --short
	since= log --branches --pretty=format:'%Cred%h%Creset %s %Cgreen(%cd)%Creset' --abbrev-commit --date=relative --since
	st   = status
	tidy = !git prune && git gc --aggressive && git fsck --full --strict

	hidden = "!git ls-files -v | sed -n '/^[a-z]/{s/^..//;p}'"
	hide   = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged

[color]
	branch = auto
	diff   = auto
	status = auto

[color "branch"]
	current = green
	local   = white
	remote  = cyan

[color "diff"]
	meta       = green
	frag       = cyan
	old        = red
	new        = yellow
	whitespace = red reverse

[color "status"]
	added     = yellow
	changed   = green
	untracked = cyan

[core]
	whitespace   = blank-at-eol,space-before-tab,indent-with-non-tab,tabwidth=8,-blank-at-eof
	pager        = "less -eFfiqrX"
	excludesfile = /home/flatcap/.gitignore
	preloadindex = true

[diff]
	mnemonicprefix = true
	tool           = vimdiff
	guitool        = vimdiff

[difftool]
	prompt = no

[merge]
	tool    = vimdiff
	guitool = vimdiff

[gpg]
	program = gpg2

[interactive]
	singlekey = true

