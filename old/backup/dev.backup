#!/bin/bash

PATH=/bin:/usr/bin
ORIG_DIR=dev64:/home/flatcap/
BACKUP_DIR=/home/flatcap/work/dev

mkdir -p $BACKUP_DIR

# First, duplicate the work directory exactly.
rsync						\
	--compress				\
	--delete				\
	--group					\
	--hard-links				\
	--links					\
	--recursive				\
	--times					\
	--verbose				\
	--exclude ".ccache"			\
	--exclude ".dbus"			\
	--exclude ".esd_auth"			\
	--exclude ".evolution"			\
	--exclude ".fontconfig"			\
	--exclude ".gstreamer*"			\
	--exclude ".gtk-bookmarks"		\
	--exclude ".gvfs"			\
	--exclude ".ICEauthority"		\
	--exclude ".icons"			\
	--exclude ".local"			\
	--exclude ".mozilla"			\
	--exclude ".nautilus"			\
	--exclude ".pulse"			\
	--exclude ".pulse-cookie"		\
	--exclude ".recently-used.xbel"		\
	--exclude ".themes"			\
	--exclude ".thumbnails"			\
	--exclude ".Xauthority*"		\
	--exclude ".xsession-errors*"		\
	--exclude "*.o"				\
	--exclude ".*.swp"			\
	--exclude "tags"			\
	$ORIG_DIR/				\
	$BACKUP_DIR

